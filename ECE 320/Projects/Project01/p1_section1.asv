%--------------------------------------------------------------------------
% 1.a: Plot the convolutio of h[n] and x[n]
%--------------------------------------------------------------------------
h_n = [1 0 1]; % -1:1
x_n = [1 0 -3]; % 0:2
y_n = conv(x_n,h_n);
ny = -1:3;
stem(ny, y_n);
axis([-3 5 -3 2]);
title('Convolution: y[n]=h[n]*x[n]');xlabel('time');ylabel('y[n]');

